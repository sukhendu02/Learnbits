    {{>navbar}}
<div class="container " style="font-family: Inter;">
    <h3 class="mt-3" style="color: #4E9C94;">Create New Blog Post</h3>
   
    <div class="flex-container d-flex p-2">
        

        <div class="left p-2">
            <div class="reward-status">
                <div class="reward-banner">
    <div class="reward-header">
      {{!-- <img src="https://www.svgrepo.com/show/361149/award-medal.svg" alt="Award Icon"> --}}
      <i class="fa-solid fa-award" style="font-size: 35px;color:gold"></i>
      <h2 class="reward-title">Earn Rewards for Quality Content!</h2>
    </div>
    <p class="reward-description">
      Get rewarded for your valuable contributions to our community.
    </p>
    <div class="reward-info">
      {{!-- <img src="https://www.svgrepo.com/show/352170/coin.svg" alt="Coins Icon"> --}}
      <img src="/images/lb-coin-removebg-preview.png" alt="">
      <span class="reward-info-text">
        Earn 10 coins for each approved blog post!
      </span>
    </div>
  </div>

            </div>
       
<div class="form-container">
       {{#if messages.posted}}
              <div style="font-size: 12px;" class="alert alert-success  fade show p-3" id="blog-posted" role="alert">
                <strong>Success!</strong> Your blog has been sent to review.
                {{!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> --}}
              </div>
              {{/if}}
       {{#if messages.notPosted}}
              <div style="font-size: 12px;" class="alert alert-danger  fade show p-3" id="blog-posted" role="alert">
                <strong>Ohho!</strong> Something is broken!
                 Please try again later.
                {{!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> --}}
              </div>
              {{/if}}


        <form action="/contribute/submit-blog" method="post">
            <div>
            <label for="" class="">Title</label><br>
            <input type="text" name="blog_title" class="blog_post_input" id="blog-title" placeholder="Blog title">
            </div>
            <div>
            <label for="" class="">Brief</label><br>
            <textarea type="text" name="blog_brief" class="blog_post_input" id="blog-brief"  maxlength="100">Brief in about 100 words
                </textarea>
            </div>
            <div class="flex" id="tags_cat">

           <div class="p-2" style="width: 50%;">
            <label for="" class="">Category</label><br>
            {{!-- <input type="text" name="blog_category" class="blog_post_input" id="blog-tags" placeholder="Blog title"> --}}
            <select name="blog_category" id="blog_category">
  <option value="volvo">Volvo</option>
  <option value="saab">Saab</option>
  <option value="mercedes">Mercedes</option>
  <option value="audi">Audi</option>
</select>
            </div>
            <div class="p-2" style="width: 50%;">
            <label for="" class="">Tags (, comma seperated)</label><br>
            <input type="text" name="blog_tags" class="blog_post_input" id="blog-tags" placeholder="AI, Machine Learning, python">
            </div>
           
  </div>
            <div class="editor-container p-2">
                <label for="">Blog</label>
                        {{!-- <textarea name="" id="" cols="30" rows="10"></textarea> --}}
                        <textarea name="blog_post" id="editor" style="height: 200px;" ></textarea>
                    </div>
<div>

                    <button class="submit-btn-blog">Submit for Review</button>
</div>

        </form>


        <div class="auther-box p-2 m-2 ">
            <h6 style="color: #617CEA;">Auther</h6>
            {{myData.fullname }} <br>
            {{!-- {{#if myData.firstName}}
            <small class="text-secondary"> {{myData.firstName}} {{myData.lastName}}</small> <br>
            {{/if}} --}}
            {{#if myData.bio}}
            <small class="text-secondary"> {{myData.bio}}</small>
            {{/if}}
        </div>
    </div>
        </div>
        <div class="right p-2">
                  <div id="blog_post_info" class="banner m-2">
