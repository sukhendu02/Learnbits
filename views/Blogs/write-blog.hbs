    <style>

        .submit-btn-blog{
            background-color: #4E9C94;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            padding: 12px 16px;
            margin: 14px;
            float: right;
            
        }
.left label{
    font-size: 14px;
    font-weight: 600;
    color: #1f1f1f;

}

.blog_post_input,#blog_category{
    padding: 12px;
    border:1.5px solid grey;
    border-radius: 8px;
    font-size: 14px;
    margin: 4px;
    color: grey;
    width: 100%;
}
.blog_post_input:focus,#blog_category:focus{
outline: rgb(77, 77, 77);
border: 2px solid;
box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
}
.left{
    width: 70%;
}
.right{
    width: 30%;

}
#blog_post_info{
    font-size: 12px;
    padding: 8px;
    border-radius: 8px;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;

}
#tags_cat{
    display: flex;
    flex-direction: row;

}
#blog_post_info{
    border-top: 4px solid #617CEA;
    background-color: #f0f2f8;
    color: rgb(77, 77, 77);
}

 .reward-banner {
      background: linear-gradient(to right, #fff8e1, #ffecb3);
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
      overflow: hidden;
      margin-bottom: 2rem;
      padding: 2rem 1.5rem;
      font-family: sans-serif;
    }
    .reward-header {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }
    .reward-header img {
      width: 2rem;
      height: 2rem;
    }
    .reward-title {
      margin-left: 0.75rem;
      font-size: 1.5rem;
      font-weight: 700;
      color: #1f2937; /* gray-900 */
    }
    .reward-description {
      font-size: 1.125rem;
      color: #4b5563; /* gray-600 */
      margin-top: 1rem;
    }
    .reward-info {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem 1rem;
      background-color: rgba(217, 119, 6, 0.1); /* amber-600/10 */
      border-radius: 9999px;
      margin-top: 1rem;
    }
    .reward-info img {
      width: 1.25rem;
      height: 1.25rem;
    }
    .reward-info-text {
      margin-left: 0.5rem;
      color: #78350f; /* amber-900 */
      font-weight: 600;
    }

    p.ck-placeholder {
    height: 400px;
}
.auther-box{
    border:1px solid #617CEA;
    border-radius: 8px;
    border-left: 4px solid #617CEA;
    width: fit-content;
    
}
@media screen and (max-width:991px){
    .flex-container
    {
        flex-direction: column;
    }
    .left,.right{
        width: 100%;
    }
}
    
    </style>
