.form {
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 480px;
  background-color: #fff;
  padding: 40px;
  border-radius: 20px;
  font-family: 'Montserrat';
  margin: auto;
  letter-spacing: 0.3px;
  margin-top: 5%;

}

.title {
  font-size: 28px;
  color: #26A69A;
  font-weight: 600;
  letter-spacing: -1px;
  position: relative;
  display: flex;
  align-items: center;
  padding-left: 30px;
}

.title::before,.title::after {
  position: absolute;
  content: "";
  height: 16px;
  width: 16px;
  border-radius: 50%;
  left: 0px;
  background-color: #26A69A;
}

.title::before {
  width: 18px;
  height: 18px;
  background-color: #26A69A;
}

.title::after {
  width: 18px;
  height: 18px;
  animation: pulse 1s linear infinite;
}

.message, .signup-link {
  color: rgba(88, 87, 87, 0.822);
  font-size: 14px;
}

.signin {
  text-align: center;
}

.signup-link a {
    text-decoration: none;
  color: #26A69A;
}

.signup-link a:hover {
  text-decoration: underline #1f877d;
  color: #1f877d;
}

.flex {
  display: flex;
  width: 100%;
  gap: 6px;
}

.form label {
  position: relative;
}

.form label .input {
  width: 100%;
  padding: 15px 10px 15px 10px;
  outline: 0;
  border: 1px solid rgba(105, 105, 105, 0.397);
  border-radius: 10px;
  margin-bottom: 6px;
}

.form label .input + span {
  position: absolute;
  left: 10px;
  top: 15px;
  color: grey;
  font-size: 0.9em;
  cursor: text;
  transition: 0.3s ease;
}

.form label .input:placeholder-shown + span {
  top: 15px;
  font-size: 0.9em;
}

.form label .input:focus + span,.form label .input:valid + span {
  top: 0px;
  font-size: 0.7em;
  font-weight: 600;
}

.form label .input:valid + span {
  color: green;
}

.submit {
  border: none;
  outline: none;
  background-color: #26A69A;
  padding: 10px;
  border-radius: 10px;
  color: #fff;
  font-size: 16px;
  transform: .3s ease;
}

.submit:hover {
  background-color: #1f877d;
  cursor: pointer;
}

@keyframes pulse {
  from {
    transform: scale(0.9);
    opacity: 1;
  }

  to {
    transform: scale(1.8);
    opacity: 0;
  }
}

@media screen and (max-width:768px) {
    .form {
        width: 80%;
        margin: auto!important ;
    }
}
@media screen and (max-width:480px) {
    .form {
        width: 95%;
        margin: auto!important ;
        padding: 20px;
    }
}
</style>
</head>
<body>
    {{>navbar}}
