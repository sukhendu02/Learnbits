        crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    {{!--
    <script src="index.js"></script> --}}
    <style>
        .badge-container {
            /* background-color:  rgb(128, 203, 196); */
               background-color: #80CBC4;
            display: flex;
            justify-content: center;
            flex-direction: column;
            padding: 12px;
            border-radius: 6px;

        }

        #user-circle-id {
            font-size: 150px;
               
            padding:20px 40px;
            text-align: center;
            color: #fff;
        }

        .profile-container {
            background-color: #B2DFDB;
            width: 100%;
            border-radius: 6px;
        }

        .username {
            text-align: center;
        }

        .email,
        .username-an,
        .another-links {
            padding: 10px;
            margin: 40px;
            border-radius: 8px;
            overflow-wrap: break-word;
        }

        /* .cng-pass{
            text-decoration: none;
            color: black;
        } */
        .another-links {
            color: black;
        }

        .logout-btn {
            text-align: center;
            padding: 5px;
            /* text-decoration: none; */
        }

        a.btn.btn-primary {
            background-color: #009688;
            border: none;
            width: 50%;
        }

        a.btn.btn-primary:hover ,a.btn.btn-primary:focus{
            outline: none;
            box-shadow: none !important;
            background-color: #00796B !important;

        }

        i.fas.fa-chevron-right {
            float: right;
            margin-right: 5px;
            color: teal;
        }

        span {
            color: gray;
        }

        @media screen and (max-width:480px) {
            .container {
                padding: 0;
            }

            .email,
            .username-an,
            .another-links {
                margin: 20px;
            }
        }

           @media screen and (max-width:768px){
                .flex-container{
                    flex-direction: column;
                }
                .side_1.m-3,.profile-container.m-3{
                    width: auto;
                    margin: 12px 0 !important;
                }
                .profile-container{
                    font-size: 14px;
                }
           }

     

        .flex-container {
            display: flex;
        }
        .side_1{

     border-radius: 6px;
        }

        .link-in-profile-page:hover,.link-in-profile-page:focus{
            text-decoration: none;
        }
    </style>
</head>

<body>
    {{>navbar}}
    <div class="container">

        <div class="flex-container">
            <div class="side_1 m-3">
                <div class="badge-container">
                    <i id="user-circle-id" class="fas fa-user-circle"></i>
                    <div class="username">
                        <h5 class=" text-light mb-2">{{fullname}}</h5>
                    </div>
                     <div class="logout-btn">
                        <a class="btn btn-primary" href="/logout" role="button">Logout</a>
                    </div>

                </div>
                  

            </div>
            <div class="profile-container m-3">
                
                <div class="user-details">
                    <div class="username-an bg-light">
                         E-mail: <span> {{email}}  </span> 
                    </div>
                    <div class="email bg-light">
                       Username: <span>  {{fullname}} </span>  
                    </div>
                    <div class="email bg-light">
                       Phone:  <span>   </span>  
                    </div>
                    <a class="link-in-profile-page" href="/Terms-of-use">
                        <div class="another-links bg-light">
                            Terms of Use <span><i class="fas fa-chevron-right"></i></span>
                        </div>
                    </a>
                    <a class="link-in-profile-page" href="/Privacy-policy">
                        <div class="another-links bg-light">
                            Privacy Policy <span><i class="fas fa-chevron-right"></i></span>
                        </div>
                    </a>
                    <a class="link-in-profile-page" href="#">
                        <div class="another-links bg-light">
                            Change Password <span><i class="fas fa-chevron-right"></i></span>
                        </div>
                    </a>
                 

                </div>
                {{!-- {{/with}} --}}
            </div>
        </div>


    </div>

    {{>Footer}}


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
</body>

</html>