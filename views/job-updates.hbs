    {{>navbar}}
<div class="container">
    <div class="page-heading mt-2">
        <h2>Latest Updates</h2>
        <hr>
    <div class="flex-container">
        <div class="all-cards-container">
          {{#each updates}}
            <div class="cards-at-updates">
              {{#if company_logo}}
                   <img width="90px" height="60px" style="object-fit: contain;" class="company-logo" src={{{company_logo}}} alt="">
                            {{else}}
                  <img width="90px" height="60px" style="object-fit: contain;" class="company-logo" src="/images/icons8-company-64 (3).png" alt="img">

              {{/if}}
                <h5>{{title}} </h5>
                <p class="text-secondary mb-2" style="font-size: 12px;"><span><img width="18px" src="/images/icons8-company-64 (2).png" alt=""> </span> {{Company}}</p>
                 {{#if Job_profile}} 
               <p class="mb" style="font-size:14px; letter-spacing:0.8px"><span class="text-secondary" style="font-weight:500;letter-spacing:0.8px"><i class="fa fa-briefcase"></i> </span>{{Job_profile}}</p>
               {{/if}}
                   <p class="text-secondary" style="font-size: 14px;"><span class="type-span">{{job_type}}</span>  &nbsp; {{#if job_location}} | &nbsp;<i class="fas fa-map-marker-alt"></i> <span style="font-weight:500">Location</span> : {{job_location}}{{/if}}</p>             
              {{#if Last_date}}  <p class="text-secondary mb-1" style="font-size: 12px;"><strong><i class="far fa-stopwatch"></i> </strong>Last Date to apply : {{Last_date}}</p>{{/if}}
              <div class="btn-container text-right">
           <a href="/latest-updates/{{_id}}/{{title}}"> <button class="cta">
  <span>Apply Now</span>
  <svg viewBox="0 0 13 10" height="10px" width="15px">
    <path d="M1,5 L11,5"></path>
    <polyline points="8 1 12 5 8 9"></polyline>
  </svg>
</button>
</a>
              </div>
  
            </div>
            {{/each}}
               <nav class="my-4" aria-label="Page navigation example">
  <ul class="pagination">
       {{#if firstpage}}
     <li class="page-item disabled ml-5">
      <span class="page-link">Previous</span>
      {{else}}
    <li class="page-item ml-5"><a class="page-link" href="?page={{prevp}}"><i class="fas fa-arrow-circle-left"></i> Previous</i></a></li>
 {{/if}}
    

  {{#if hasnext}}
  <li class="page-item mr-5 disabled">
      <span class="page-link">Next</span>
    </li>
    {{else}}
    <li class="page-item mr-5"><a class="page-link" href="?page={{nextp}}">Next <i class="fas fa-arrow-circle-right"></i></a></li>
   {{/if}}
  </ul>
</nav>
        </div>

        
        <div class="side-items-container-updates">
