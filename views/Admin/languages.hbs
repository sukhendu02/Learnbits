    <style>
        body{
            background-color: #EDF2F9;
        }
            .card{
        width: 180px;
        margin: 5px;
        background-color: #fff;
        border-radius: 10px;
        display: flex;

        text-decoration: none;
          justify-content: center;
        align-items: center;
box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
padding: 20px;   
height: 100px;     
         
    }
    .card:hover{
         transform-origin: top center;
         box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;

  transition: 0.2s ease;
  cursor: pointer;
 
    }
    h4{
       
        color: black;
      
    }
    .another-container{
        margin: 10px;
        padding: 5px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }
     th.btn-td {
    width: 120px;
}
h3{
    text-align: center;


}
.index{
    width: 80px;
}
.ques{
    width: 500px;
}
tr{
