                         <h3>C Questions</h3>
            <table class="table">
  <thead class="table-dark">
    <tr>
      <th class="index" scope="col">#</th>
      <th class="ques" scope="col">Question</th>
      <th scope="col">Topic</th>
      <th class="btn-td" scope="col">View</th>
       <th class="btn-td" scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
      {{#each Cs}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{question}}</td>
      <td>{{topic}}</td>
      <td ><a href="/language/c/{{_id}}/{{question}}"><button type="button" class="btn btn-info" >View</button></a></td>
      <td ><a href="/admin/language/delete/{{_id}}"><button type="button" class="btn btn-danger">Delete</button></a></td>
