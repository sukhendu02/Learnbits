<body>
    {{>adminsidenav}}
    <div class="main">
        <h2 class="my-3" style="font-weight: 600;color:#617CEA">Data Structure and Algorithms</h2>

        <div class="upload-container p-2">
          <a href="/admin/placement-prepration/coding">
            <button class="add-new-btn fw-bold" style="font-size: 14px;">Upload New Questions <i style="font-size: 16px;" class="fa-solid fa-plus"></i></button>
            </a>
        </div>

        <div class="show-prev-quesions">
                     <div class="container wrapper my-4">
               {{!-- <h3>C Questions</h3> --}}
      <table
        class="table table-bordered table-striped table-hover"
        cellspacing="0"
        width="100%"
      >
        <thead>
          <tr>
            <th style="width: 12px;" class="col-md">#</th>
            <th class="col-md-2">Questions</th>
            <th class="col-md-2">Topic</th>
            <th class="col-md-2">Company</th>
            <th class="col-md-1">Difficulty</th>
            <th style="padding-right: 25px;
    padding-left: 12px;width:30px" class="">View</th>
            <th style="padding-right: 25px;
    padding-left: 8px;width:35px" class="col-md-1">Update</th>
            <th  style="padding-right: 25px;
    padding-left: 8px;width:35px" class="col-md-1">Delete</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
         <th>#</th>
            <th>Questions</th>
            <th>Topic</th>
            <th>Difficulty</th>
            <th>Company</th>
            <th>View</th>
            <th>Update</th>
            <th>Delete</th>
          </tr>
        </tfoot>
        <tbody>
           {{#each PPcodings}}
          <tr>

              <td>{{inc @index}}</td>
            <td>{{question}}</td>
            <td>{{topic}}</td>
            <td>{{company_tags}}</td>
            <td>
              {{#isEqual   level "Easy"}}
                           <span style="font-size: 13px;white-space: nowrap; font-family:'Inter';letter-spacing:1px" class="fw-bold text-success pr-2">{{level}} 
                            </span>
                            {{/isEqual}}
                {{#isEqual   level "Medium"}}
                            <span style="font-size: 13px;white-space: nowrap; font-family:'Inter';letter-spacing:1px" class="fw-bold text-warning pr-2">{{level}} 
                            </span>
                            {{/isEqual}}
                {{#isEqual   level "Hard"}}
                            <span style="font-size: 13px;white-space: nowrap; font-family:'Inter';letter-spacing:1px" class="fw-bold text-danger pr-2">{{level}} 
                            </span>
                            {{/isEqual}}
            </td>
            <td class="text-center">
              <a href="/Data-Structure-and-algorithms/{{_id}}/{{question}}">
              <button class="admin-view-btn bg-info"><i class="fa-solid fa-eye"></i></button></td>
              </a>
            <td class="text-center">
              {{!-- <a href="/admin/languages/update/c/{{{_id}}}"> --}}
              <button class="admin-update-btn bg-warning"><i class="fa-solid fa-pen-to-square"></i></button>
              {{!-- </a> --}}
              </td>
            <td class="text-center">
             
              <button class="admin-delete-btn bg-danger" data-bs-toggle="modal" data-bs-target="#CModel{{@index}}"><i class="fa-solid fa-trash"></i></button></td>
          </tr>



          <!-- Modal -->
<div class="modal fade" id="CModel{{@index}}" tabindex="-1" aria-labelledby="CModelLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="CModelLabel">Are you sure you want to delete?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

      {{question}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="/admin/PP/delete/{{_id}}">
        <button type="button" class="btn btn-danger">Yes, Delete</button>
        </a>
      </div>
    </div>
  </div>
</div>
         
        {{/each}}
          
       
        </tbody>
      </table>
    </div>
