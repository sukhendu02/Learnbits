                    <div class="editor-container p-2">
                        {{!-- <textarea name="" id="" cols="30" rows="10"></textarea> --}}
                        <textarea name="int_exp" id="editor"></textarea>
                    </div>

                    <div class="submit-btn-container text-center">
                        <button class="submit-btn-int-exp">
                            Submit
                        </button>
                    </div>

                </form>
                           {{else}}
